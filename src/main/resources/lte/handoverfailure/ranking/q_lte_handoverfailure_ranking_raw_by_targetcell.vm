#set($conditionColumns=["CATEGORY_ID_2"])

SELECT
    #if($count > 0)
      top $count
    #end
    RAW_TABLE.THIER321_ID as 'THIER321_ID',
    $CATEGORY_ID_2  as 'CATEGORY_ID_2',
    RANK() OVER (order by Failures desc) as Rank,
    TOPO_TABLE.VENDOR as 'RAN Vendor',
    TOPO_TABLE.HIERARCHY_3 as 'Controller',
    TOPO_TABLE.HIERARCHY_1 as 'Target Access Area',
    FAILURES as 'Failure',
    RAT_TABLE.RAT_DESC as 'RAT_DESC'

FROM
    (
        SELECT
            count(*) as FAILURES,
            THIER321_ID
        from
                #REPLACE_RAW_VIEW_WITH_RAW_TABLES_AND_FILTER_COLUMNS_WITH_TAC_EXCLUSION_SPECIFY_COLUMNS($TECH_PACK_LIST.getAllRawTables() "rawview" $conditionColumns $columnsToSelect)
        where rawview.THIER321_ID <> 0
        GROUP BY
            rawview.THIER321_ID
    ) as RAW_TABLE
LEFT OUTER JOIN
    (
        SELECT
            HIER321_ID, HIERARCHY_3, HIERARCHY_1, VENDOR, RAT
        FROM
            DIM_E_LTE_HIER321
        GROUP BY
            HIER321_ID, HIERARCHY_3, HIERARCHY_1, VENDOR, RAT
    ) as TOPO_TABLE
ON
    RAW_TABLE.THIER321_ID = TOPO_TABLE.HIER321_ID
LEFT OUTER JOIN
    (
        SELECT
            RAT, RAT_DESC
        FROM
            DIM_E_SGEH_RAT
        GROUP BY
            RAT, RAT_DESC
    ) as RAT_TABLE
    ON RAT_TABLE.RAT = TOPO_TABLE.RAT